create or replace table if not exists playerpositions
(
  player_id int unsigned not null,
  pos varchar(20) charset utf8 not null,
  primary key (player_id, pos),
  constraint playerpositions_ibfk_1
    foreign key (pos) references positions (position)
)
  collate=utf8_spanish_ci;

create or replace index if not exists pos
  on playerpositions (pos);

